<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8B414040</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#8B414040</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C7C7C7</item>
        <item name="colorControlActivated">#FDC723</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>
